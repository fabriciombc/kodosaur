<div class="show-container d-flex align-items-center justify-content-center">
  <div class="game-play">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-warning w-100" data-toggle="modal" data-target="#exampleModalCenter">
      Read the Objective
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= @game.challenge.objective %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <div id="game-container-1" class="game-container" data-challenge-id="<%= @game.challenge.id %>" data-level="<%= @game.challenge.level.to_json %>" data-game-id="<%= @game.id %>">
      <div id="game-map-1" class="game-map">
        <div id="tiles" class="layer"></div>
        <div id="sprites" class="layer"></div>
      </div>
    </div>
    <div id="work-space">
      <div id="code-box">
        <button class="btn btn-primary mx-1" data-command="u" id="block-up">up</button>
        <button class="btn btn-primary mx-1" data-command="d" id="block-down">down</button>
        <button class="btn btn-primary mx-1" data-command="l" id="block-left">left</button>
        <button class="btn btn-primary mx-1" data-command="r" id="block-right">right</button>
      </div>

      <div id="block-commands">
        <ul id="canvas"></ul>
      </div>

      <div class="d-flex align-items-center justify-content-center mb-3 mt-2" id="execute-commands">
        <button class="btn btn-danger mx-1" id="code-execute">Execute</button>
        <button class="btn btn-success mx-1" id="code-reset">Reset</button>
      </div>
    </div>
  </div>
</div>
